<div class="panel panel-default">
<div class="panel-heading"> Item's List </div>
  <div class="panel-body">
<h3>Add New Item <%= link_to '+', new_item_path, {class: "btn btn-info"} %> </h3>
 </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.descb %></td>
        <td><%= link_to 'Show', item, {class: "btn btn-success btn-sm"} %></td>
        <td><%= link_to 'Edit', edit_item_path(item),{class: "btn btn-primary btn-sm"} %></td>
        <td><%= link_to 'Destroy', item, {class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' }} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
