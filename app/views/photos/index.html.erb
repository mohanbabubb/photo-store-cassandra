
<div class="panel panel-default">
<div class="panel-heading"> Photos </div>
  <div class="panel-body">

<p id="notice"><%= notice %></p>
<h3>Add New Photo <%= link_to '+', new_item_photo_path, {class: "btn btn-info"} %></h3>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.name %></td>
        <td><%= photo.attachment %></td>
        <td><%= link_to 'Show', item_photo_path(@item, photo.id), {class: "btn btn-default"} %></td>
        <td><%= link_to 'Delete', item_photo_path(@item, photo.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  <%= link_to 'Back to Item page', item_path(@item), {class: "btn btn-info"} %>