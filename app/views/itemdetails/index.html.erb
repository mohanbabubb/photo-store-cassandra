<p id="notice"><%= notice %></p>

<h1>Itemdetails</h1>

<table>
  <thead>
    <tr>
      <th>Itemattribute</th>
      <th>Itemvalue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itemdetails.each do |itemdetail| %>
      <tr>
        <td><%= itemdetail.data %></td>
        <td><%= link_to 'Show', item_itemdetail_path(@item, itemdetail) %></td>
        <td><%= link_to 'Edit', edit_item_itemdetail_path(@item, itemdetail) %></td>
        <td><%= link_to 'Destroy', [@item, itemdetail], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

